{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./src",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "module": "esnext",
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "es2015",
    "lib": [
      "es2019",
      "dom"
    ],
    "paths": {
      "~app/*": [
        "app/*"
      ],
      "~shared/*": [
        "app/shared/*"
      ],
      "~core/*": [
        "app/core/*"
      ],
      "~modules/*": [
        "app/modules/*"
      ],
      "~configs/*": [
        "app/configs/*"
      ],
      "~assets/*": [
        "app/assets/*"
      ]
    }
  },
  "angularCompilerOptions": {
    "fullTemplateTypeCheck": true,
    "strictInjectionParameters": true
  }
}